{
	// hide misc files that we most likely don't need to see
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/out": true,
		"**/build": true,
		"**/dist": true,
		"**/node_modules": true,
		"**/.turbo": true,
		"**/.cache": true,

		"pnpm-lock.yaml": true,
		"postcss.config.js": true,
		".editorconfig": true
	},

	// always choose typescript from node_modules
	"typescript.tsdk": "./node_modules/typescript/lib",

	// use LF line endings
	"files.eol": "\n",

	// smol performance improvements
	"editor.minimap.renderCharacters": false,

	// set biome as default formatter for json, ts, tsx, js, jsx
	// "[json][jsonc][typescript][typescriptreact][javascript][javascriptreact]": {
	// 	"editor.defaultFormatter": "biomejs.biome"
	// },


}
